#include <iostream>
#include <string>
using namespace std;

string mystring;
int slength;

void PrintLetterByLetter(string toPrint){
  for(int i=0; i< slength; i++){
    cout << toPrint[i] << " ";
  }
  cout << endl;
}

int main() {
	cout << "Bitte Zeichenkette eingeben:" << endl;
	//Bei Eingaben mit Leerzeichen versagt
	//folgender Befehl:
	//cin >> mystring;
	//daher besser folgenden Befehl verwenden:
	getline (cin, mystring);
	slength = mystring.size();
	cout << "LÃ¤nge: " << slength << endl;
    PrintLetterByLetter(mystring);
    // String in Double-Wert umwandeln:
    double dval = stod(mystring, NULL);
    cout << "Double-Wert: " << dval << endl;

	return 0;
}
